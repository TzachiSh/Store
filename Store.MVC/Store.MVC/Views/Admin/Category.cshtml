@model Category

<form class="well form-horizontal" asp-action="product" asp-controller="admin" method="post" id="contact_form">
    <fieldset>

        <!-- Form Name -->
        <legend>Post new product!</legend>

        <!-- Text input-->


        <!-- Text input-->
        <div class="form-group">
            <label asp-for="CategoryName" class="col-md-4 control-label"></label>
            <div class="col-md-4 inputGroupContainer">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-shopping-cart"></i></span>
                    <input asp-for="CategoryName" placeholder="Category Name" class="form-control">
                    <span asp-validation-for="CategoryName"></span>
                </div>
            </div>
        </div>

        <!-- Success message -->
        <div class="alert alert-success" role="alert" id="success_message">Success <i class="glyphicon glyphicon-thumbs-up"></i> Thanks for contacting us, we will get back to you shortly.</div>

        <!-- Button -->
        <div class="form-group">
            <label class="col-md-4 control-label"></label>
            <div class="col-md-4">
                <button type="submit" class="btn btn-warning">Send <span class="glyphicon glyphicon-send"></span></button>
            </div>
        </div>

    </fieldset>
</form>