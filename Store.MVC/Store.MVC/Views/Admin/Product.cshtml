@model ProductAndCategoryBase




<form class="well form-horizontal" asp-action="product" asp-controller="admin" method="post" id="contact_form">
    <fieldset>

        <!-- Form Name -->
        <legend>Post new product!</legend>

        <!-- Text input-->

        <div class="form-group">
            <label asp-for="ModelName" class="col-md-4 control-label"></label>
            <div class="col-md-4 inputGroupContainer">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pushpin"></i></span>
                    <input asp-for="ModelName" placeholder="Model name" class="form-control" type="text">
                    <span asp-validation-for="ModelName"></span>
                </div>
            </div>
        </div>

        <!-- Text input-->

        <div class="form-group">
            <label asp-for="ModelNumber" class="col-md-4 control-label"> Model number</label>
            <div class="col-md-4 inputGroupContainer">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-barcode"></i></span>
                    <input asp-for="ModelNumber" name="last_name" placeholder="Last Name" class="form-control" type="text">
                    <span asp-validation-for="ModelName"></span>
                </div>
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label asp-for="UnitCost" class="col-md-4 control-label"></label>
            <div class="col-md-4 inputGroupContainer">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-usd"></i></span>
                    <input asp-for="UnitCost" placeholder="Cost" class="form-control" type="number">
                    <span asp-validation-for="ModelName"></span>
                </div>
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label asp-for="UnitsInStock" class="col-md-4 control-label"></label>
            <div class="col-md-4 inputGroupContainer">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-tasks"></i></span>
                    <input asp-for="UnitsInStock" placeholder="Cost" class="form-control" type="number">
                    <span asp-validation-for="ModelName"></span>
                </div>
            </div>
        </div>


        <!-- Select Basic -->

        <div class="form-group">
            <label asp-for="CategoryName" class="col-md-4 control-label"></label>
            <div class="col-md-4 selectContainer">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                    <select asp-for="CategoryName" class="form-control selectpicker">
                        <option value=" ">Chose category</option>
                       <vc:categories></vc:categories>
                    </select>
                    <span asp-validation-for="ModelName"></span>
                </div>
            </div>
        </div>
        <!-- radio checks -->
        <div class="form-group">
            <label asp-for="IsFeatured" class="col-md-4 control-label">Featured?</label>
            <div class="col-md-4">
                <div class="radio">
                    <label>
                        <input asp-for="IsFeatured" type="radio" value="ture" /> Yes
                    </label>
                    <label>
                        <input asp-for="IsFeatured" type="radio" value="false" /> No

                    </label>
                </div>
            </div>
        </div>

        <!-- Text area -->

        <div class="form-group">
            <label class="col-md-4 control-label">Product Description</label>
            <div class="col-md-4 inputGroupContainer">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    <textarea asp-for="Description" class="form-control" placeholder="Product Description"></textarea>
                    <span asp-validation-for="ModelName"></span>
                </div>
            </div>
        </div>

        <!-- Success message -->
        <div class="alert alert-success" role="alert" id="success_message">Success <i class="glyphicon glyphicon-thumbs-up"></i> Thanks for contacting us, we will get back to you shortly.</div>

        <!-- Button -->
        <div class="form-group">
            <label class="col-md-4 control-label"></label>
            <div class="col-md-4">
                <button type="submit" class="btn btn-warning">Send <span class="glyphicon glyphicon-send"></span></button>
            </div>
        </div>

    </fieldset>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
