@model LoginViewModel;
@{
    Layout = "_AuthenticateLayout";
}

<div class="login-form ">
    <form id="login-form" asp-controller="account" asp-action="login" style="display: block;">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" tabindex="1" class="form-control" placeholder="Email" value="">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" tabindex="2" class="form-control" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group text-center">
            <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
            <label for="remember"> Remember Me</label>
        </div>
        <div class="form-group">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-sm-6 col-sm-offset-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
                </div>
            </div>
        </div>

    </form>
</div>